<power>
    <mode name="normal">
        <scene name="fixed_performance">
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
        </scene>
        <scene name="interaction_touch">
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_min_freq" value="1600000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_max_freq" value="1600000" />
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
        </scene>
        <scene name="interaction_launch">
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_min_freq" value="1600000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_max_freq" value="1600000" />
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
        </scene>
        <scene name="interaction_fling">
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
        </scene>
        <scene name="interaction_wakeup">
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
        </scene>
        <scene name="benchmark">
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4/schedutil" file="freq_margin" value="30" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0/schedutil" file="freq_margin" value="50" />
            <set path="subsys" file="uclamp" value="conf_3" />
        </scene>
        <scene name="ddr">
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
        </scene>

        <!-- SR:add disable cpuidle in launch scene for performance by  zhangshipeng 2022.12.15 start -->
        <scene name="launch" >
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_min_freq" value="1600000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_max_freq" value="1600000" />
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
            <set path="/sys/block/mmcblk0/queue" file="read_ahead_kb" value="256" />
            <set path="subsys" file="uclamp" value="conf_4" />
            <set path="/sys/devices/system/cpu/cpu0/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu1/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu2/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu3/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu4/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu5/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu6/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu7/cpuidle/state1" file="disable" value="1" />
        </scene>
        <!-- SR:add disable cpuidle in launch scene for performance by  zhangshipeng 2022.12.15 end -->

        <scene name="screen_rotation" >
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
        </scene>
        <scene name="video_1080p" >
            <set path="/sys/devices/system/cpu/sprd_isolation/core_crl_cluster0" file="min_cpus" value="3" />
        </scene>
        <scene name="video_60fps" >
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_min_freq" value="1500000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_max_freq" value="1500000" />
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
        </scene>
        <scene name="video_sync" >
            <set path="/sys/devices/system/cpu/sprd_isolation/core_crl_cluster0" file="min_cpus" value="2" />
        </scene>
        <scene name="performance" >
            <set path="/sys/devices/system/cpu/sprd_isolation/core_crl_cluster0" file="min_cpus" value="4" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
        </scene>
        <scene name="performance_gts" >
            <set path="/sys/devices/system/cpu/sprd_isolation/core_crl_cluster0" file="min_cpus" value="4" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
        </scene>
        <scene name="performance_cts" >
            <set path="/sys/devices/system/cpu/sprd_isolation/core_crl_cluster0" file="min_cpus" value="4" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
            <set path="/sys/class/devfreq/scene-frequency/sprd-governor" file="scene_boost_dfs" value="max" />
        </scene>
        <scene name="temp_ctrl" >
            <set path="/sys/devices/system/cpu/sprd_isolation/core_crl_cluster1" file="max_cpus" value="0" />
        </scene>
        <scene name="camera_perf" >
            <set path="subsys" file="uclamp" value="conf_2" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_min_freq" value="1600000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_max_freq" value="1600000" />
            <set path="/proc/sys/vm" file="watermark_scale_factor" value="80" />
        </scene>
        <scene name="camera_lowpower" >
        </scene>
        <scene name="camera_lowpower_1" >
        </scene>
        <scene name="radio_nviot" >
            <set path="/sys/devices/system/cpu/sprd_isolation/core_crl_cluster0" file="min_cpus" value="4" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
        </scene>
        <scene name="com.futuremark.pcmark.android.benchmark" >
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_min_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0" file="scaling_max_freq" value="1200000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_min_freq" value="1600000" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4" file="scaling_max_freq" value="1600000" />
        </scene>
        <scene name="screen_off" >
            <set path="/sys/devices/system/cpu/cpufreq/policy0/schedutil" file="freq_margin" value="0" />
            <set path="/sys/devices/system/cpu/cpufreq/policy4/schedutil" file="freq_margin" value="0" />
        </scene>
        <scene name="com.ss.android.ugc.aweme" >
            <set path="/sys/devices/system/cpu/cpufreq/policy4/schedutil" file="freq_margin" value="15" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0/schedutil" file="freq_margin" value="25" />
        </scene>
        <scene name="com.tencent.mm" >
            <set path="/sys/devices/system/cpu/cpufreq/policy4/schedutil" file="freq_margin" value="15" />
            <set path="/sys/devices/system/cpu/cpufreq/policy0/schedutil" file="freq_margin" value="25" />
        </scene>
        <!-- SR:add io scheduler for XLWYLS-92 by  zhangshipeng 2022.12.01 start -->
        <scene name="com.transsion.autotest.factory" >
            <set path="/sys/block/mmcblk0/queue" file="scheduler" value="bfq" />
        </scene>
        <!-- SR:add io scheduler for XLWYLS-92 by  zhangshipeng 2022.12.01 end -->

        <!-- SR:add io scheduler for XLWYLS-136 by  zhangshipeng 2022.12.01 start -->
        <scene name="cn.test.filldata" >
            <set path="/sys/block/mmcblk0/queue" file="scheduler" value="bfq" />
        </scene>
        <!-- SR:add io scheduler for XLWYLS-136 by  zhangshipeng 2022.12.01 end -->
        <scene name="mtp_usb" >
            <set path="/sys/devices/system/cpu/cpu0/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu1/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu2/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu3/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu4/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu5/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu6/cpuidle/state1" file="disable" value="1" />
            <set path="/sys/devices/system/cpu/cpu7/cpuidle/state1" file="disable" value="1" />
        </scene>
    </mode>
    <mode name="low_power" />
    <mode name="power_save" />
    <mode name="ultra_power_save" />
    <mode name="performance" />
</power>
